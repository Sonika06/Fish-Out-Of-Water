<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/level_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paw" >

    <ImageView
        android:id="@+id/imageViewStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="208dp" />

    <TextView
        android:id="@+id/scoreLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Score: 0"
        android:textColor="#5c7923"
        android:textSize="30dip"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="30dip"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/stepsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timerText"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="30dip"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/instrucTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stepsTextView"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="#5c7923"
        android:textSize="30dip"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/badegView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instrucTextView"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="30dip"
        android:textStyle="bold" />

    <Button
        android:id="@+id/startAnimationBtn"
        android:layout_width="@dimen/optionButtonWidth"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/timerText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button"
        android:text="Start Level"
        android:textSize="@dimen/optionButtonTextSize" />
 />

</RelativeLayout>